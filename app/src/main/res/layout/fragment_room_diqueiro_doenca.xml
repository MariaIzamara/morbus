<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/roomDiqueiroDoenca"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginTop="40dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    tools:context=".ui.main.MainActivity">

    <TextView
        android:id="@+id/txtDiqueiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_diqueiro"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorText"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/diqueiroBtnDoenca"
        android:layout_below="@+id/txtDiqueiro">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/diqueiroTxtDoenca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="@string/txt_escolha_doenca"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.41000003" />

            <Spinner
                android:id="@+id/diqueiroSpinnerDoenca"
                style="@style/spinnerTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/colorText"
                android:dropDownWidth="wrap_content"
                android:scrollbarSize="4dp"
                app:layout_constraintStart_toStartOf="@id/diqueiroTxtDoenca"
                app:layout_constraintTop_toBottomOf="@+id/diqueiroTxtDoenca" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/diqueiroBtnDoenca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:layout_alignParentEnd="true"
        android:text="@string/btn_continuar"
        android:layout_alignParentBottom="true"
        android:ems="4" />

</RelativeLayout>